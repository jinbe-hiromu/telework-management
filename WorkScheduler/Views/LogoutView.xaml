<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkScheduler.Views.LogoutView"
             xmlns:vm="clr-namespace:WorkScheduler.ViewModels"
             Title="LogoutView">
    <ContentPage.BindingContext>
        <vm:LogoutViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label Text="ログアウトしますか？" VerticalOptions="Center" HorizontalOptions="Center" FontSize="30"/>
        <Button Text="はい" Command="{Binding LogoutCommand}"/>
    </VerticalStackLayout>

</ContentPage>