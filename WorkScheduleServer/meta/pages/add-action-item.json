{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "From",
                              "component": "From",
                              "name": "FromLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime",
                              "dateFormat": "yyyy/MM/dd",
                              "type": "datepicker",
                              "name": "From",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${actionitem.From}"
                            },
                            {
                              "type": "required-validator",
                              "name": "FromRequiredValidator",
                              "component": "From",
                              "text": "From is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "To",
                              "component": "To",
                              "name": "ToLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime",
                              "dateFormat": "yyyy/MM/dd",
                              "type": "datepicker",
                              "name": "To",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${actionitem.To}"
                            },
                            {
                              "type": "required-validator",
                              "name": "ToRequiredValidator",
                              "component": "To",
                              "text": "To is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Event Name",
                              "component": "EventName",
                              "name": "EventNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "EventName",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${actionitem.EventName}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Notes",
                              "component": "Notes",
                              "name": "NotesLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "Notes",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${actionitem.Notes}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Backgroud Color",
                              "component": "BackgroudColor",
                              "name": "BackgroudColorLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "BackgroudColor",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${actionitem.BackgroudColor}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new ActionItem!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "WorkScheduleDB.createActionItem",
                        "parameters": [
                          {
                            "name": "ActionItem",
                            "value": "${actionitem}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${actionitem}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "data": "${actionitem}",
                  "visible": "${actionitem != null}",
                  "itemType": "WorkScheduleServer.Models.WorkScheduleDb.ActionItem"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "actionitem",
        "type": "set",
        "value": "new WorkScheduleServer.Models.WorkScheduleDb.ActionItem(){}",
        "valueType": "WorkScheduleServer.Models.WorkScheduleDb.ActionItem"
      }
    ]
  },
  "name": "Add Action Item",
  "layout": "Main",
  "access": [
    "Authenticated"
  ]
}