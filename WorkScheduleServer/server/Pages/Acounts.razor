@page "/"
@page "/acounts"
@layout MainLayout
@inherits WorkScheduleServer.Pages.AcountsComponent

@using Radzen
@using Radzen.Blazor
@using WorkScheduleServer.Models.WorkScheduleDb
@using Microsoft.AspNetCore.Identity;
@using WorkScheduleServer.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
<PageTitle>Acounts</PageTitle>
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Acounts">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenSplitButton Icon="get_app" style="margin-left: 10px; margin-bottom: 10px" Text="Export" Click="@Splitbutton0Click">
          <ChildContent>
            <RadzenSplitButtonItem Text="Excel" Value="xlsx">
            </RadzenSplitButtonItem>
            <RadzenSplitButtonItem Text="CSV" Value="csv">
            </RadzenSplitButtonItem>
          </ChildContent>
        </RadzenSplitButton>
        <RadzenDataGrid @ref="grid0" AllowFiltering="true" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="true" Data="@getAcountsResult" TItem="WorkScheduleServer.Models.WorkScheduleDb.Acount" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenDataGridColumn TItem="WorkScheduleServer.Models.WorkScheduleDb.Acount" Property="Id" Title="Id">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WorkScheduleServer.Models.WorkScheduleDb.Acount" Property="Name" Title="Name">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WorkScheduleServer.Models.WorkScheduleDb.Acount" Property="Password" Title="Password">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WorkScheduleServer.Models.WorkScheduleDb.Acount" Property="Notes" Title="Notes">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="WorkScheduleServer.Models.WorkScheduleDb.Acount" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="workScheduleServerModelsWorkScheduleDbAcount">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, workScheduleServerModelsWorkScheduleDbAcount))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenDataGridColumn>
          </Columns>
        </RadzenDataGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
